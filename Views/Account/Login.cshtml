@model BankZdjecOlsztyn.ViewsModels.LoginVM


    <form asp-action="Login" asp-controller="Account" method="post" class="form-horizontal login" role="form">
        <h2>Zaloguj się na swoje konto</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">

            <input type="text" asp-for="UserName" class="form-control" id="UserName" placeholder="Login">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">

            <input type="password" asp-for="Password" class="form-control" id="Password" placeholder="Hasło">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Zaloguj</button>
    </form>